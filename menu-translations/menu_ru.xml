<?xml version='1.0' encoding='utf-8'?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                                   file:///usr/share/openbox/menu.xsd">
  <menu id="root-menu" label="Openbox 3">
    <item label="Все приложения">
      <action name="Execute">
        <execute>jgmenu_run</execute>
      </action>
    </item>
    <separator />
    <item label="Браузер">
      <action name="Execute">
        <execute>x-www-browser</execute>
      </action>
    </item>
    <item label="Файловый менеджер">
      <action name="Execute">
        <execute>thunar</execute>
      </action>
    </item>
    <menu id="menu-4258592" label="Help">
      <item label="Первая помощь">
        <action name="Execute">
          <execute>mxob-help</execute>
        </action>
      </item>
      <item label="Руководство пользователя MX">
        <action name="Execute">
          <execute>mx-manual</execute>
        </action>
      </item>
    </menu>
    <item label="Инструменты MX">
      <action name="Execute">
        <execute>mx-tools</execute>
      </action>
    </item>
    <item label="Запустить">
      <action name="Execute">
        <execute>/usr/bin/mxfb-rofirun</execute>
      </action>
    </item>
    <item label="Терминал">
      <action name="Execute">
        <execute>xfce4-terminal --drop-down</execute>
      </action>
    </item>
    <separator />
    <menu id="Appearance.menu" label="Внешний вид">
      <item label="Conky">
        <action name="Execute">
          <execute>conky-manager2</execute>
        </action>
      </item>
      <item label="Иконки рабочего стола">
        <action name="Execute">
          <execute>mx-idesktool</execute>
        </action>
      </item>
      <item label="Док">
        <action name="Execute">
          <execute>tint2session</execute>
        </action>
      </item>
      <item label="Мониторы">
        <action name="Execute">
          <execute>gkrellm</execute>
        </action>
      </item>
      <item label="Тема">
        <action name="Execute">
          <execute>obconf-qt</execute>
        </action>
      </item>
      <item label="Обои">
        <action name="Execute">
          <execute>/usr/bin/feh-setbg</execute>
        </action>
      </item>
    </menu>
    <menu id="Settings.menu" label="Настройки">
      <item label="Автозапуск">
        <action name="Execute">
          <execute>xdg-open ~/.config/openbox/autostart</execute>
        </action>
      </item>
      <item label="Подробно">
        <action name="Execute">
          <execute>xdg-open ~/.config/openbox/rc.xml</execute>
        </action>
      </item>
      <item label="Док">
        <action name="Execute">
          <execute>mxfb-tint2-manager</execute>
        </action>
      </item>
      <item label="Отображение">
        <action name="Execute">
          <execute>raindrop</execute>
        </action>
      </item>
      <item label="Клавиши">
        <action name="Execute">
          <execute>obkey</execute>
        </action>
      </item>
      <menu id="menu-7065141" label="Меню">
        <item label="Все приложения">
          <action name="Execute">
            <execute>xdg-open ~/.config/jgmenu/jgmenurc</execute>
          </action>
        </item>
        <item label="Рабочий стол">
          <action name="Execute">
            <execute>obmenu2</execute>
          </action>
        </item>
        <item label="Rofi">
          <action name="Execute">
            <execute>mx-rofi-manager</execute>
          </action>
        </item>
      </menu>
      <menu id="menu-2893040" label="Область уведомлений">
        <item label="Systray">
          <action name="Execute">
            <execute>xdg-open ~/.stalonetrayrc</execute>
          </action>
        </item>
        <item label="Часы">
          <action name="Execute">
            <execute>xdg-open ~/.Xdefaults</execute>
          </action>
        </item>
      </menu>
      <menu id="menu-2782497" label="Raspberry Pi">
        <item label="Основные настройки">
          <action name="Execute">
            <execute>rc_gui</execute>
          </action>
        </item>
        <item label="Детальная настройка">
          <action name="Execute">
            <execute>x-terminal-emulator -e sudo raspi-config</execute>
          </action>
        </item>
      </menu>
            <item label="Обои">
        <action name="Execute">
          <execute>xdg-open ~/.config/feh/feh-setbg.conf</execute>
        </action>
      </item>
    </menu>
    <menu id="Out_of_sight.menu" label="Вне поля зрения">
      <item label="Conky">
        <action name="Execute">
          <execute>conkytoggle.sh</execute>
        </action>
      </item>
      <item label="Иконки рабочего стола">
        <action name="Execute">
          <execute>idesktoggle icons</execute>
        </action>
      </item>
      <item label="Док">
        <action name="Execute">
          <execute>toggletint2_dock_ob</execute>
        </action>
      </item>
      <item label="Monitors ">
        <action name="Execute">
          <execute>toggle-mx gkrellm</execute>
        </action>
      </item>
      <menu id="menu-6251006" label="Область уведомлений">
        <item label="Systray">
          <action name="Execute">
            <execute>toggle-mx stalonetray</execute>
          </action>
        </item>
        <item label="Часы">
          <action name="Execute">
            <execute>toggle-mx tdc</execute>
          </action>
        </item>
      </menu>
    </menu>
    <menu id="exit-menu" label="Покинуть">
      <item label="Обновить">
        <action name="Execute">
          <execute>openbox --reconfigure</execute>
        </action>
      </item>
      <item label="Выход">
        <action name="Execute">
          <command>openbox --exit</command>
        </action>
      </item>
      <item label="Выключить">
        <action name="Execute">
          <command>systemctl poweroff</command>
        </action>
      </item>
      <item label="Перезапустить">
        <action name="Execute">
          <command>systemctl reboot</command>
        </action>
      </item>
    </menu>
  </menu>
</openbox_menu>
