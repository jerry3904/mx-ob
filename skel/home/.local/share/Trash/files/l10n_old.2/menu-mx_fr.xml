<?xml version='1.0' encoding='ISO-8859-1'?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                                   file:///usr/share/openbox/menu.xsd">
  <menu id="root-menu" label="Openbox 3">
    <item label="Toutes les applications">
      <action name="Execute">
        <execute>rofi -show drun</execute>
      </action>
    </item>
    <item label="Menu--détaillé">
      <action name="Execute">
        <execute>xfce4-appfinder</execute>
      </action>
    </item>
    <separator />
    <item label="Navigateur">
      <action name="Execute">
        <execute>x-www-browser</execute>
      </action>
    </item>
    <item label="Gestionnaire de fichiers">
      <action name="Execute">
        <execute>thunar</execute>
      </action>
    </item>
    <item label="Aide">
      <action name="Execute">
        <execute>thunar /usr/share/mxflux/help/</execute>
      </action>
    </item>
    <item label="Démarrer">
      <action name="Execute">
        <execute>fbrun</execute>
      </action>
    </item>
    <item label="Terminal">
      <action name="Execute">
        <execute>x-terminal-emulator --drop-down</execute>
      </action>
    </item>
    <separator />
    <menu id="Appearance.menu" label="Apparence">
      <item label="Conky">
        <action name="Execute">
          <execute>conky-manager2</execute>
        </action>
      </item>
      <item label="Dock (écran tactile)">
        <action name="Execute">
          <execute>tint2 ~/.config/tint2/touchscreen/touch-dock-tint2rc</execute>
        </action>
      </item>
      <item label="Moniteurs">
        <action name="Execute">
          <execute>gkrellm</execute>
        </action>
      </item>
      <item label="Thème">
        <action name="Execute">
          <execute>obconf</execute>
        </action>
      </item>
      <item label="Fond d'écran">
        <action name="Execute">
          <execute>/usr/local/bin/feh-setbg</execute>
        </action>
      </item>
    </menu>
    <menu id="Settings.menu" label="Paramètres">
      <item label="Démarrage automatique">
        <action name="Execute">
          <execute>featherpad ~/.config/openbox/autostart</execute>
        </action>
      </item>
      <item label="Paramètres de base">
        <action name="Execute">
          <execute>obconf</execute>
        </action>
      </item>
      <item label="Affichage">
        <action name="Execute">
          <execute>env SUDO_ASKPASS=/usr/lib/rc-gui/pwdrcg.sh sudo -AE arandr</execute>
        </action>
      </item>
      <item label="Touches">
        <action name="Execute">
          <execute>obkey</execute>
        </action>
      </item>
      <item label="Menu--bureau">
        <action name="Execute">
          <execute>featherpad ~/.config/openbox/menu.xml</execute>
        </action>
      </item>
      <separator />
      <item label="Gestionnaire des paramètres MX">
        <action name="Execute">
          <execute>custom-toolbox /etc/custom-toolbox/mxfb-settings.list</execute>
        </action>
      </item>
      <item label="Paramètres détaillés">
        <action name="Execute">
          <execute>featherpad ~/.config/openbox/rc.xml</execute>
        </action>
      </item>
    </menu>
    <menu id="Out_of_sight.menu" label="Masquer">
      <item label="Basculer conky">
        <action name="Execute">
          <execute>conkytoggle.sh</execute>
        </action>
      </item>
      <item label="Basculer les icônes">
        <action name="Execute">
          <execute>idesktoggle icons</execute>
        </action>
      </item>
      <item label="Station d'accueil pour écran tactile (bascule)">
        <action name="Execute">
          <execute>~/.fluxbox/scripts/toggletint2-touch-dock</execute>
        </action>
      </item>
      <item label="Systray">
        <action name="Execute">
          <execute>~/.fluxbox/scripts/toggletint2-touch-dock</execute>
        </action>
      </item>
    </menu>
    <menu id="Leave.menu" label="Quitter">
      <item label="Rafraîchir">
        <action name="Execute">
          <execute>openbox --reconfigure</execute>
        </action>
      </item>
      <item label="Quitter">
        <action name="Execute">
          <execute>openbox --exit</execute>
        </action>
      </item>
      <item label="Arrêter">
        <action name="Execute">
          <execute>sudo /sbin/halt</execute>
        </action>
      </item>
    </menu>
  </menu>
</openbox_menu>
